var dgram = require('dgram');

function Collectd(host, port) {
    this.host = host || "ff18::efc0:4a42";
    this.port = port || 25826;
    /* TODO: will work for udp4 as well? */
    this.sock = dgram.createSocket('udp6');
    this.sock.on('error', function(e) {
	console.error(e.stack || e.message || e);
    });
}

Collectd.prototype.send = function() {
    var host, plugin, pluginInstance, type, typeInstance;
};

module.exports = {
    
};
